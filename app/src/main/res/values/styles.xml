<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="stylebutton" >
        <item name="android:textColor">@color/textcolor1</item>
        <item name="android:background">@drawable/style_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#dc97e69f</item>
        <item name="android:textColor">#ca000000</item>
        <item name="android:textColorPrimary">#ca000000</item>
    </style>
    <style name="buttonorder">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        </style>
    <style name="stylespenner">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:layout_marginLeft">18dp</item>
    </style>
    <style name="stayletexttotal">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="stayltexttax">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="stayltexttax2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">15dp</item>

    </style>

</resources>
